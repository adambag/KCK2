<Page x:Class="KCK2.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KCK2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Menu">
    <Grid>
        <Frame x:Name="MainFrame" Visibility="Collapsed" />
        <Button Name="PlayButton" Content="Play" HorizontalAlignment="Center" Height="31" FontSize="20" VerticalAlignment="Top" Width="148" Margin="0,159,0,0" Click="StartButton_Click"/>
        <Button Name="StatsButton" Content="Stats" HorizontalAlignment="Center" Height="31" FontSize="20" VerticalAlignment="Top" Width="147" Margin="0,217,0,0" Click="StatsButton_Click"/>
        <Button Name="StoreButton" Content="Store" HorizontalAlignment="Center" Height="31" FontSize="20" VerticalAlignment="Top" Width="147" Margin="0,274,0,0" Click="StoreButton_Click"/>
        <Button Name="ExitButton" Content="Exit" HorizontalAlignment="Center" Height="31" FontSize="20" VerticalAlignment="Top" Width="148" Margin="0,336,0,0" Click="ExitButton_Click"/>
        
    </Grid>
</Page>
