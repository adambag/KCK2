<Page x:Class="KCK2.NewPlayer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KCK2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewPlayer">
    <Grid>
        <Frame x:Name="NewPlayerFrame" Visibility="Collapsed" />
        <TextBlock Name="Player" HorizontalAlignment="Center" FontSize="30" Text="Podaj nazwę użytkownika" VerticalAlignment="Center" />
        <TextBox Name="PlayerNameTextBox" HorizontalAlignment="Center" Height="31" FontSize="20" VerticalAlignment="Top" Width="308" Margin="0,274,0,0" KeyDown="PlayerNameTextBox_KeyDown"/>
        <Button Name="Confirm" Content="Stwórz" HorizontalAlignment="Center" Height="31" FontSize="20" VerticalAlignment="Top" Width="148" Click="ConfirmButton_Click" Margin="0,333,0,0"/>
    </Grid>
</Page>
