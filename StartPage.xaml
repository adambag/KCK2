<Page x:Class="KCK2.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KCK2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartPage">
    <Grid>
        <Frame x:Name="StartPageFrame" Visibility="Collapsed" />
        <Button Name="NewGameButton" Content="New Game" HorizontalAlignment="Center" Height="31" FontSize="20" VerticalAlignment="Center" Width="148" Click="NewGameButton_Click"/>
        <Button Name="LoadGameButton" Content="Load Game" HorizontalAlignment="Center" Height="30" FontSize="20" VerticalAlignment="Top" Width="148" Margin="0,257,0,0" Click="LoadGameButton_Click"/>
        <Button Name="ExitGameButton" Content="Exit" HorizontalAlignment="Center" Height="31" FontSize="20" VerticalAlignment="Top" Width="148" Margin="0,305,0,0" Click="ExitGameButton_Click"/>

    </Grid>
</Page>
